<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/commit_title"
        android:textColor="#1369EA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commit_title" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/commit_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commit_author" />

    <TextView
        android:textSize="12dp"
        android:id="@+id/commit_publish_date"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commit_publish_date" />

</LinearLayout>